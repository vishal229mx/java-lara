<script>
       function populateDistricts()
	   {
		   var myForm = document.forms[0];
		   var state = myForm.state;
		   var v1 = document.getElementById(state.value);
		   var v2 = document.getElementById("districts");
		   v1.innerHTML = v2.innerHTML;
		}
</script>